pkgname="esp32-sdk"
pkgver=2.1
pkgrel=1
pkgdesc="Espressif IoT Development Framework. Official development framework for ESP32."
arch=('x86_64')
url="https://www.espressif.com/"
license=('APL')
depends=('python2-pyserial' 'ncurses5-compat-libs')
options=(!strip)

source=("https://dl.espressif.com/dl/xtensa-esp32-elf-linux64-1.22.0-61-gab8375a-5.2.0.tar.gz")
sha256sums=('b74333fd7f622f035fee7c4e0ca57c3e2ccb2515de5d901f33e87e79cdf0d4f9')

package() {
	mkdir -p ${pkgdir}/opt
	cp -rf ${srcdir}/xtensa-esp32-elf ${pkgdir}/opt
}

