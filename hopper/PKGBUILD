# Maintainer: Christopher Hewitt <hewittc@users.noreply.github.com>
pkgname=hopper
pkgver=4.1.5
pkgrel=1
pkgdesc='Reverse engineering tool for disassembling, decompiling, and debugging applications'
arch=('x86_64')
url='https://www.hopperapp.com/'
license=('custom:hopper')
depends=('ncurses5-compat-libs' 'qt5-base')

source=("hopper_${pkgver}_amd64.deb::https://d2ap6ypl1xbe4k.cloudfront.net/Hopper-v4-${pkgver}-Linux.deb")
sha1sums=('aec562f04c89a2f1c8d8a78db26ccc233c1e9712')

package() {
  bsdtar -xf data.tar.gz -C "$pkgdir/"
  chmod 0755 "$pkgdir/opt"
  chmod 0755 "$pkgdir/usr"
  chmod 0755 "$pkgdir/usr/share"
  chmod 0755 "$pkgdir/usr/share/doc"
  chmod 0755 "$pkgdir/usr/share/applications"
}
