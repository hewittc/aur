# Maintainer: Christopher Hewitt <hewittc@users.noreply.github.com>
pkgname=libiio
pkgver=0.10
pkgrel=1
pkgdesc="Library for interfacing with IIO devices."
arch=('i686' 'x86_64' 'armv7h' 'aarch64')
url="https://github.com/analogdevicesinc/libiio"
license=('GPL2')
depends=('libxml2' 'libusb' 'libserialport' 'libaio')
makedepends=('cmake')
optmakedepends=('doxygen')

source=("https://github.com/analogdevicesinc/libiio/archive/v$pkgver.tar.gz" "000-doxyfile-path.patch")
sha256sums=('002d57f35715821efae66479859bc5357b4d8d33bfff1446b4e17b02ae2c10d2' '3657c6c4d3ed1c14d18be02b18c32ff7d29cfca3bc9c920c12882ca576da2832')
conflicts=('libiio')
provides=('libiio')

prepare() {
  cd "$srcdir/$pkgname-$pkgver/"
  patch -p1 < ../000-doxyfile-path.patch
}

build() {
  cd "$srcdir/$pkgname-$pkgver/"
  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_SBINDIR=/usr/bin \
        -DCMAKE_INSTALL_LIBDIR=/usr/lib \
        -DUDEV_RULES_INSTALL_DIR=/usr/lib/udev/rules.d ../
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/"
  cd build
  make DESTDIR="$pkgdir" install

  install -D -m644 "$startdir/iiod.service" "$pkgdir/usr/lib/systemd/system/iiod.service"
}

